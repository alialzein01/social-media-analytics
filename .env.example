# Example environment variables for local development
# Copy this file to `.env` (or set vars in your shell) and fill values.

# Apify API token (required to call Apify actors)
APIFY_TOKEN=your_apify_token_here

# Optional: override data directories (relative to repo root)
DATA_RAW_DIR=data/raw
DATA_PROCESSED_DIR=data/processed

# Optional: tune default fetch limits
DEFAULT_MAX_POSTS=10
DEFAULT_MAX_COMMENTS=25
